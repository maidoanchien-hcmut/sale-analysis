{
    "name": "customer-service-qa",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun run --cwd backend dev",
        "dev:frontend": "bun run --cwd frontend dev",
        "dev:llm": "cd llm-service && uv run python main.py",
        "db:push": "bun run --cwd backend db:push",
        "db:studio": "bun run --cwd backend db:studio",
        "db:clean": "bun run --cwd backend db:clean",
        "db:clean-analysis": "bun run backend/src/scripts/clean-analysis.ts",
        "scrape": "bun run --cwd backend scrape",
        "analyze": "curl -X POST http://localhost:8000/analyze",
        "pipeline": "bun run scrape && bun run analyze",
        "install:all": "bun install && cd backend && bun install && cd ../frontend && bun install && cd ../llm-service && uv sync"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
